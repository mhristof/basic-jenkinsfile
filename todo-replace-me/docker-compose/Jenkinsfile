pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh 'cd todo-replace-me/docker && docker-compose build'
            }
        }
        stage('up') {
            steps {
                sh 'cd todo-replace-me/docker && docker-compose up -d'
            }
        }
        stage('down') {
            steps {
                sh 'cd todo-replace-me/docker && docker-compose down --rmi local --volumes'
            }
        }
    }
}
